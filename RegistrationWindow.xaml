<Window x:Class="WpfApp1.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration Window" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="First Name" Margin="0,0,0,10" />
            <TextBox x:Name="txtFirstName" Margin="0,0,0,10" />
            <TextBlock Text="Last Name" Margin="0,0,0,10" />
            <TextBox x:Name="txtLastName" Margin="0,0,0,10" />
            <TextBlock Text="Login" Margin="0,0,0,10" />
            <TextBox x:Name="txtLogin" Margin="0,0,0,10" />
            <TextBlock Text="Password" Margin="0,0,0,10" />
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,10" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="btnRegister" Content="Register" Width="75" Margin="0,0,10,0" Click="btnRegister_Click_1" />
            <Button x:Name="btnCancel" Content="Cancel" Width="75" />
        </StackPanel>
    </Grid>
</Window>
